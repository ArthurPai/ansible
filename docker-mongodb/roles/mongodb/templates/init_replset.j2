rs.initiate()
sleep(3000)
{% for host in groups['secondary_servers'] %}
rs.add("{{ host }}:{{ mongod_port }}")
sleep(3000)
{% endfor %}
rs.status()
cfg = rs.conf()
{% for host in groups['primary_servers'] %}
cfg.members[0].host = "{{ host }}:{{ mongod_port }}"
{% endfor %}
rs.reconfig(cfg)
rs.status()